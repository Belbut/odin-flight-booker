<h1>Flights#index</h1>
<p>Find me in app/views/flights/index.html.erb</p>


<%=form_with do |form|%>
    <%=form.label :departure_airport, "From:"%>
    <%=select_tag(:departure_airport, options_for_select(@airports_options))%>

    <%=form.label :arrival_airport, "To:"%>
    <%=select_tag(:arrival_airport, options_for_select(@airports_options))%>

    <%=form.label :flight_date, "Date:"%>
    <%=form.date_field :flight_date%>

    <%=form.label :number_passengers, "Number of passengers:"%>
    <%=form.number_field :number_passengers, in:(1..50), step: 1%>
    <%= form.submit "Search"%>
<%end%>